<%= form_for @event, :html => {class:"form-horizontal"} do |f|%>

             <!-- Here is form code -->
     <div class="row">
       <div class="col-md-6">
                <div class="form-group">
                  <label for="route" class="control-label star">Event Name</label>
                  <%=f.text_field :event_name, class: 'form-control', :required => true %>
                </div>
        </div>

        <div class="col-md-6">
                <div class="form-group">
                  <label for="route" class="control-label star">Event Location</label>
                  <%=f.text_field :event_location, class: 'form-control', :required => true %>
                </div>
                <%=f.hidden_field :user_id, value: current_user.id%>
        </div>
    </div>

     <div class="row mt-xl">
        <div class="col-sm-6 mb-sm">
                <button type="button" data-dismiss="modal" class="btn btn-default btn-block">
                        <i class="fa fa-times"></i> Close
                </button>
        </div>
        <div class="col-sm-6 mb-sm">
                <%=f.button "<i class='fa fa-arrow-circle-right'></i> Submit".html_safe, type: 'submit', class: "btn btn-info btn-block", data: { "disable-with": "Submiting..." } %>
        </div>
</div>

<% end %>
