<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= link_to 'BACK',event_member_reports_path, class: 'btn btn-secondary'  %>
</div><br>	

<div class="card">
	<div class="card-header header-style"><h4>EVENT MEMBERS DATA</h4></div>
		<% unless @event_member_data.nil? || @event_member_data.empty? %>
			<div class = "card-body">
				<table id="event_member_table" class="table table-bordered">
					<thead>
						<tr>
							<th>Name</th>
							<th>Email</th>
						</tr>
					</thead>
					<tbody>
						<% @event_member_data.each do |stu| %>
							<tr>
								<td><%= stu.student_name  %></td>
								<td><%= stu.student_email %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		<% else %>
			<div class = "card-body">
				<p>Currently there is no data to show.</p>
			</div>
		<% end %>
</div>



