<%= form_for @slate, url: slate_slate_detail_path(@slate), method: :PATCH do |f|%>

<div class=" justify-content-center">

    <div class="form-group form-inline">
        <%= label_tag  "sport_name", "SPORT NAME:", class: "col-md-3" %>
        <%= f.text_field :sport_name, id:"hidden_sport_name", class: 'form-control ', placeholder:"Enter sport name" %>
    </div>

   <div class="form-group form-inline">
         <%= label_tag  "team_type", "TEAM:", class: "col-md-3" %>
         <%= f.select :team_type, options_for_select(slate_detail_team_name, @slate.team_type), {}, class: 'form-control' %>
   </div>

   <div class="form-group form-inline">
         <%= label_tag  "gender_type", "GENDER:", class: "col-md-3" %>
         <%= f.select :gender_type, options_for_select(slate_detail_gender_name, @slate.gender_type), {}, class: 'form-control' %>    
   </div>

   <div class="form-group form-inline">
        <%= label_tag  "coach_count", "COACHES:", class: "col-md-3" %>
        <%=f.text_field :coach_count, class: 'form-control' %>
   </div>

   <div class="form-group form-inline">
        <%= label_tag  "atheletes_count", "ATHLETES:", class: "col-md-3" %>
        <%=f.text_field :atheletes_count, class: 'form-control' %>
   </div>

    <div class="form-group form-inline">
        <%= label_tag  "manager_count", "MANAGERS:", class: "col-md-3" %>
        <%=f.text_field :manager_count, class: 'form-control' %>
    </div>

    <div class="form-group form-inline">
        <%= label_tag  "image_start", "STARTING IMAGES:", class: "col-md-3" %>
        <%=f.text_field :image_start, class: 'form-control', :required => true, onkeyup: 'MinimumNValidate()' %>
    </div>

    <div class="form-group form-inline">
        <%= label_tag  "image_end", "END IMAGES:", class: "col-md-3" %>
        <%=f.text_field :image_end, class: 'form-control', :required => true, onkeyup: 'MinimumNValidate()' %>
    </div>
 
    <div class="form-group form-inline">
        <%= label_tag  "total_count", "TOTAL IMAGES:", class: "col-md-3" %>
        <%=f.number_field :total_count, class: 'form-control', :readonly => true %>
    </div>

    <div class="form-group form-inline">
        <%= label_tag  "note", "Notes:", class: "col-md-3" %>
        <%=f.text_area :note, class: 'form-control' %>
    </div>

</div>


    <div class="row mt-xl">
        <div class="col-sm-6 mb-sm">
             <button type="button" data-dismiss="modal" class="btn btn-default btn-block"><i class="fa fa-times"></i> Close </button>
        </div>
        <div class="col-sm-6 mb-sm">
              <%=f.button "<i class='fa fa-arrow-circle-right'></i> Update".html_safe, type: 'submit', class: "btn btn-info btn-block", data: { "disable-with": "Submiting..." } %>
        </div>
    </div>

<% end %>

<script type="text/javascript">

        function MinimumNValidate(){
                var image_start_count = document.getElementById("slate_detail_image_start").value;
                var image_end_count   = document.getElementById("slate_detail_image_end").value;                
                var difference = Math.abs(image_end_count - image_start_count) + 1;
                document.getElementById("slate_detail_total_count").value = difference
        }

</script>

