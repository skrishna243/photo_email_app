<div lass="row align-items-center vh-100 " >
  <div class="col-8 mx-auto" id="test-class">
	<div class="card shadow border">
			<div class="card-header header-style">
				<h2 class="text-center"><%= @school.school_name %> &nbsp; <br>Player Information </h2>
			</div>
	<div class = "card-body d-flex flex-column align-items-center">
				<%= form_with model: [@school, @school.students.build] do |f| %>
			 <div class="row">
				    <%= f.label :type_of_sport, 'Sport' %><br>
				   <% if @school.season_name == "FALL" %>
				    	<%= f.select :type_of_sport, options_for_select(fall_sport_name), { include_blank: '----- Select Sport ------'}, {class: 'form-control'} %>
				    <% elsif @school.season_name == "SPRING" %>
				    	<%= f.select :type_of_sport, options_for_select(spring_sport_name), { include_blank: '----- Select Sport ------'}, {class: 'form-control'} %>
				    <% else %>
				    	<%= f.select :type_of_sport, options_for_select(winter_sport_name), { include_blank: '----- Select Sport ------'}, {class: 'form-control'} %>
				    <% end %>   
				</div>
				<%= f.text_field :type_of_sport, id:"hidden_sport_name", class: 'form-control row', placeholder:"Enter sport name" %>
			 <!-- <div class="row">
				  
				    <%#= f.label :team_type, 'Team' %><br>
				    <%#= f.select :team_type,options_for_select(team_name),  { include_blank: '----- Select Team ------'}, {class: ' form-control'} %>				 
			 </div> -->
			 <div class="row" style="margin-top: 10px;">
          <label class= 'form-control'> 
		 				<%= f.radio_button :team_type, '2', class: 'text-center' %>
		 				<label for ="student_team_type_2"> Varsity</label>&nbsp;
		 				<%= f.radio_button :team_type, '1', class: 'text-center' %>
		 				<label for ="student_team_type_1"> JV</label>&nbsp;
		 				<%= f.radio_button :team_type, '0', class: 'text-center' %>
		 				<label for ="student_team_type_0"> Freshman</label>&nbsp;
		 				<%= f.radio_button :team_type, '6', class: 'text-center' %>
		 				<label for ="student_team_type_6"> None</label>
		 			</label> 		 				
			 </div>

			 <div class="row" style="margin-top: 10px;">
		 			<label class= 'form-control'>
			 				<%= f.radio_button :position, '0', class: 'text-center' %>
			 				<label for ="student_position_0">Athlete</label>&nbsp;
			 				<%= f.radio_button :position, '2', class: 'text-center' %>
			 				<label for ="student_position_2">Manager</label>&nbsp;
			 				<%= f.radio_button :position, '1', class: 'text-center' %>
			 				<label for ="student_position_1">Coach</label>&nbsp;
		 			</label> 
			 </div>

			 <div class="row" style="margin-top: 10px;">
		 			<label class= 'form-control'>
		 				<%= f.radio_button :stu_gender, '0', class: 'text-center' %>
		 				<label for ="student_stu_gender_0">Boys</label>&nbsp;
		 				<%= f.radio_button :stu_gender, '1', class: 'text-center' %>
		 				<label for ="student_stu_gender_1">Girls</label>&nbsp;
		 				<%= f.radio_button :stu_gender, '2', class: 'text-center' %>
		 				<label for ="student_stu_gender_2">CO-ED</label>&nbsp;
		 			</label> 
			 </div>

			 <div class="row">
				  
				    <%= f.label :student_name, 'Name' %><br>
				    <%= f.text_field :student_name, class: 'form-control', required: :true %>
				  
			 </div>
			 <div class="row">
				  
				    <%= f.label :student_id, 'Student Id' %><br>
				    <%= f.text_field :student_id, class: 'form-control' %>
				  
			 </div>
			 <!-- <div class="row">
				 
				    <%#= f.label :student_email, "Student's Email" %><br>
				    <%#= f.text_field :student_email, class: 'form-control' %>
				 
			 </div> -->
			 <div class="row">
				  
				    <%= f.label :parent_email, "Parent's Email" %><br>
				    <%= f.text_field :parent_email, class: 'form-control', required: :true %>
				 
			 </div>
			 
			 <br>
			 <%= f.hidden_field :event_date, value: Date.current%>
			 <%= f.hidden_field :school_name,  			value: @school.school_name %>
			 <%= f.hidden_field :season_type,  			value: @school.season_name %>
			 <%= f.hidden_field :photographer_id,   value: current_user.id %>

			  <div class="d-grid gap-2 col-6 mx-auto">
			    <%= f.button "Check In", type: "submit", :class=> "btn", :style=>  'background-color: #7fbde3; color: white;' %>
			  </div>
			<% end %>
			

	</div>
</div>
</div>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script type="text/javascript">

	
	
  $(document).ready(function(){
  	
  	if($(window).width() > 767) {
        $('#test-class').addClass('col-8');
    }else{
        $('#test-class').removeClass('col-8');
    }

    setTimeout(function(){
    	$('.flash-panel').fadeOut();
    }, 2000);

    	$('#hidden_sport_name').hide();
    $('#student_type_of_sport').change(function(){
    		var selectedsport = $(this).children("option:selected").val();
    		if(selectedsport == "Other"){
    			$('#hidden_sport_name').show();
    		}else{
    			$('#hidden_sport_name').hide();
    			$('#hidden_sport_name').val(selectedsport);
    		}
    });

  })


</script>