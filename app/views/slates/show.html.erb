	$(document).ready(function () { 
		$("#slate_table").DataTable({ 
				dom: 'Bfrtip',
				 scrollX: true,
				buttons:[
							{
							    	
							    extend: 'excel',
							    text: 'Export',
							    title: "Slate Details",
							    filename: "slate_name"
							}
				  		]
		});
	});
</script>
