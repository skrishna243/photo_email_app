<%= form_for @slate, :html => {class:"form-horizontal"} do |f|%>


     <div class="row">
       <div class="col-md-4">
                <div class="form-group">
                  <label for="route" class="control-label star">School Name</label>
                  <%=f.text_field :school_name, class: 'form-control', :required => true %>
                </div>
        </div>

        <div class="col-md-4">
                <div class="form-group">
                  <label for="route" class="control-label star">Season Name</label>
                  <%=f.select :season_name, options_for_select(season_name, @slate.season_name), { include_blank: '----- Select Season ------'}, {class: 'form-control' , :required => true} %>
                </div>
                <%=f.hidden_field :photographer_id, value: current_user.id%>
        </div>
        <div class="col-md-4">
                <div class="form-group">
                  <label for="route" class="control-label star">Photographer Name</label>
                  <%=f.text_field :photographer_name, class: 'form-control', :required => true %>
                </div>
        </div>

    </div>

        <div class="row mt-xl">
                <div class="col-sm-6 mb-sm">
                        <button type="button" data-dismiss="modal" class="btn btn-default btn-block">
                                <i class="fa fa-times"></i> Close
                        </button>
                </div>
                <div class="col-sm-6 mb-sm">
                        <%=f.button "<i class='fa fa-arrow-circle-right'></i> Update".html_safe, type: 'submit', class: "btn btn-info btn-block", data: { "disable-with": "Submiting..." } %>
                </div>
        </div>

<% end %>