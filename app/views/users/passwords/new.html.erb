<div lass="row align-items-center vh-100">
  <div class="col-6 mx-auto" id="test-class">
    <div class="card shadow border">
      <div class="card-header header-style"><h2 class="d-flex justify-content-center" >Forgot your password?</h2></div>
        <div class="card-body d-flex flex-column align-items-center">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div><br>

            <div class="actions">
              <%= f.submit "Send me reset password instructions", class: "btn", :style=>  'background-color: #7fbde3; color: white;' %>
            </div>
          <% end %>
        </div>
          <%= render "users/shared/links" %>
    </div>
  </div>
</div>


<script type="text/javascript">
  $(document).ready(function(){
    if($(window).width() > 767) {
        $('#test-class').addClass('col-6');
    }else{
        $('#test-class').removeClass('col-6');
    }
    setTimeout(function(){
    $('.flash-panel').fadeOut();
    }, 2000);
  })
</script>