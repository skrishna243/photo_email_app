
<%= form_for @school, :html => {class:"form-horizontal"} do |f|%>

             <!-- Here is form code -->
     <div class="row">
       <div class="col-md-6">
                <div class="form-group">
                  <label for="route" class="control-label star">School Name</label>
                  <%=f.text_field :school_name, class: 'form-control', :required => true %>
                </div>
        </div>

        <div class="col-md-6">
                <div class="form-group">
                  <label for="route" class="control-label star">Season Name</label>
                  <%=f.select :season_name, options_for_select(season_name), { include_blank: '----- Select Season ------'}, {class: 'form-control' , :required => true} %>
                </div>
                <%=f.hidden_field :user_id, value: current_user.id%>
        </div>
    </div>

     <div class="row mt-xl">
        <div class="col-sm-6 mb-sm">
                <button type="button" data-dismiss="modal" class="btn btn-default btn-block">
                        <i class="fa fa-times"></i> Close
                </button>
        </div>
        <div class="col-sm-6 mb-sm">
                <%=f.button "<i class='fa fa-arrow-circle-right'></i> Submit".html_safe, type: 'submit', class: "btn btn-info btn-block", data: { "disable-with": "Submiting..." } %>
        </div>
</div>

<% end %>
